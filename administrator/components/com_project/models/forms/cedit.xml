<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" default="0" label="COM_PROJECT_FORM_LBL_CEDIT_ID"
		readonly="true" class="readonly"
		description="JGLOBAL_FIELD_ID_DESC" />
    <field name="created_by" type="createdby" default=""
		label="COM_PROJECT_FORM_LBL_CEDIT_CREATED_BY"
		description="COM_PROJECT_FORM_DESC_CEDIT_CREATED_BY"  />
    <field name="title" type="text" size="40" class="inputbox"
		label="COM_PROJECT_FORM_LBL_CEDIT_TITLE"
		description="COM_PROJECT_FORM_DESC_CEDIT_TITLE"
        required="true"
		filter="safehtml" />
    <field name="body" type="editor" buttons="false"
        class="inputbox"
        filter="safehtml"
        required="true"
		label="COM_PROJECT_FORM_LBL_EDIT_BODY"
		description="COM_PROJECT_FORM_DESC_EDIT_BODY"
	/>
	<field name="metakeys" type="textarea" buttons="true"
        class="inputbox"
        filter="safehtml"
		label="COM_PROJECT_FORM_LBL_EDIT_METAKEYS"
		description="COM_PROJECT_FORM_DESC_EDIT_METAKEYS"  />
    <field name="metadesc" type="textarea" buttons="true"
        class="inputbox"
        filter="safehtml"
		label="COM_PROJECT_FORM_LBL_EDIT_METADESC"
		description="COM_PROJECT_FORM_DESC_EDIT_METADESC"  />
    <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset" />
    <field name="checked_out_time" type="hidden" filter="unset" />
  </fieldset>
</form>
